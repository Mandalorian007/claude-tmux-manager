# Claude TMux Manager Environment Configuration

# Application Settings
NODE_ENV=development
PORT=3000

# Mock Data (useful for development and testing)
NEXT_PUBLIC_USE_MOCK_DATA=true

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# TMux Configuration
TMUX_SOCKET_PATH=/tmp/tmux-default
TMUX_SESSION_PREFIX=claude-

# Git Configuration
GIT_WORKTREE_BASE_PATH=./.worktrees

# Security (for production)
SECRET_KEY=your-secret-key-here

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/application.log

# Database (future use)
# DATABASE_URL=sqlite:./data/sessions.db

# Redis (for caching, future use)
# REDIS_URL=redis://localhost:6379

# Performance
NEXT_TELEMETRY_DISABLED=1

# Development Settings
NEXT_PUBLIC_DEV_TOOLS=true

# Feature Flags (future use)
NEXT_PUBLIC_ENABLE_EASTER_EGGS=true
NEXT_PUBLIC_ENABLE_WELCOME_MESSAGE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# External Integrations (future use)
# GITHUB_TOKEN=your-github-token
# CLAUDE_API_KEY=your-claude-api-key